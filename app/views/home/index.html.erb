<body id="page-top">


    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Start writing new articles</h1>
                <hr>
                <p>Post anything (from anywhere!), customize everything, and find and follow others you love. Create your own blog today.</p>
                
                <% if user_signed_in?%>
                    <div class="btn btn-default btn-xl page-scroll"> 
                        <%=link_to "Log out",destroy_user_session_path,method: :delete%> 
                    </div>
                    
                <% else %>
                    <a href="#login" class="btn btn-primary btn-xl page-scroll" role="button" data-toggle="modal" data-target="#login-modal"> 
                    Login  <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                <%end%>
                
            </div>
        </div>
        <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" align="center">
                        <img class="img-circle" id="img_logo" src="http://bootsnipp.com/img/logo.jpg">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                    </div>
                        <div id="div-login-msg">
                                <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
                                <span id="text-login-msg"><font color="666">Type your username and password.</font></span>
                        </div>
                        <%= form_for(:user, :url => session_path(:user)) do |f| %>

                            <%= f.text_field :username,class: 'form-control',placeholder: 'Username' %> 
                            <%= f.password_field :password,class: 'form-control',placeholder: 'Password' %> 
                            
                            
                            <div class="modal-footer">
                                <%= f.submit 'Login', class: "btn btn-primary btn-lg btn-block" %>
                            <center>
                                <div class="btn btn-link">

                                    <%= link_to 'Lost Password?',new_user_password_path%> 

                                </div>
                                <div class="btn btn-link">

                                    <%= link_to 'Register',new_user_registration_path%>

                                </div>
                            </center>
                            </div>

                        <%end%>
                </div>

            </div>
                    
                    
        </div>
            
